{
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "globalReturn": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-trailing-spaces": ["warn", { "ignoreComments": true, "skipBlankLines": true }],
    "no-multi-spaces": "warn",
    "indent": ["warn", 2],
    "linebreak-style": 0,
    "no-extra-semi": "warn",
    "space-before-blocks": "warn",
    "semi": "warn",
    "no-console": "off",
    "no-empty": "off",
    "no-unreachable": "off",
    "no-unused-vars": ["warn", {"vars": "all", "args": "none"}]
  }
}
